{
  "name": "insta-card-maker",
  "version": "1.0.0",
  "description": "Generate 4:3 Instagram card-news PNG slides from Markdown",
  "main": "src/cli.js",
  "bin": {
    "insta-card": "src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "web": "concurrently -k -n API,UI -c yellow,cyan \"npm run web:api\" \"npm run web:ui\"",
    "web:api": "node src/server.js",
    "web:ui": "vite --config web/vite.config.mjs",
    "build:web": "vite build --config web/vite.config.mjs",
    "example": "node src/cli.js -i examples/sample.md -o output"
  },
  "keywords": [
    "markdown",
    "instagram",
    "cardnews",
    "png",
    "slides"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@milkdown/crepe": "^7.18.0",
    "@milkdown/kit": "^7.18.0",
    "@milkdown/react": "^7.18.0",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^14.0.1",
    "express": "^5.2.1",
    "html-to-image": "^1.11.13",
    "jszip": "^3.10.1",
    "lucide-react": "^0.542.0",
    "marked": "^12.0.2",
    "puppeteer": "^24.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.6",
    "vitest": "^4.0.18"
  }
}
